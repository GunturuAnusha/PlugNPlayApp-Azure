    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentEnd="true"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutTest1"
            android:layout_below="@+id/about"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal"
            android:weightSum="1">

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutTest2"

            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/linearLayoutTest1"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="My Safety Apps"
            android:id="@+id/mySafetyApps"
            android:background="#f9BA32"
            android:textColor="#F8F1E5"
            android:drawablePadding="-10dp"

            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_alignTop="@+id/linearLayoutTest1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Safety App Download"
            android:background="#4c3f54"
            android:textColor="#F8F1E5"
            android:id="@+id/safetyappdownload"

            android:layout_below="@+id/mySafetyApps"
            android:layout_alignStart="@+id/mySafetyApps"
            android:layout_marginTop="35dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Vehicle Reservation"
            android:background="#9D331F"
            android:textColor="#F8F1E5"
            android:id="@+id/vehiclereservation"
            android:layout_above="@+id/linearLayoutTest2"
            android:layout_alignStart="@+id/safetyappdownload"
            android:layout_marginBottom="28dp"
            android:textStyle="bold" />

